<wpf:NoggogUserControl
    x:TypeArguments="top:MainVm" x:Class="Synthesis.Bethesda.GUI.Views.VersionDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Noggog.WPF;assembly=Noggog.WPF"
    xmlns:top="clr-namespace:Synthesis.Bethesda.GUI.ViewModels.Top"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="VersionButton" VerticalAlignment="Center" ToolTip="UI Version" />
        <local:UpdateButtonControl x:Name="DownloadUpdateButton"
                                   Margin="6"
                                   ToolTip="Download new version of UI"/>
    </StackPanel>
</wpf:NoggogUserControl>
