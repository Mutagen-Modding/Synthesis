<local:SolutionInitViewBase
    x:Class="Synthesis.Bethesda.GUI.Views.SolutionInitView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:noggog="clr-namespace:Noggog.WPF;assembly=Noggog.WPF"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0"
            x:Name="TopTab"
            MinHeight="160"
            mahapps:HeaderedControlHelper.HeaderFontSize="16"
            mahapps:HeaderedControlHelper.HeaderForeground="AliceBlue"
            Background="Transparent">
            <TabItem Background="Transparent" Header="New Solution">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                        Margin="0,4"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Parent Directory" />
                    <noggog:PathPicker Grid.Row="1" Grid.Column="0"
                        Name="ParentDirPicker"
                        mahapps:TextBoxHelper.Watermark="Path to the folder to create the solution directory inside of" />
                    <TextBlock Grid.Row="2"
                        Margin="0,8,0,4"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Solution Name" />
                    <TextBox Grid.Row="3"
                        x:Name="SolutionNameBox"
                        mahapps:TextBoxHelper.Watermark="The name of the patcher, or the collection of patchers you intend to make"
                        Style="{StaticResource Noggog.Styles.TextBox.ErrorState}" />
                    <TextBlock Grid.Row="4"
                        Margin="0,8,0,4"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Project Name" />
                    <TextBox Grid.Row="5"
                        x:Name="NewProjectNameBox"
                        mahapps:TextBoxHelper.Watermark="{Binding New.ProjectNameWatermark}"
                        Style="{StaticResource Noggog.Styles.TextBox.ErrorState}" />
                </Grid>
            </TabItem>
            <TabItem Background="Transparent" Header="Existing Solution">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                        Margin="0,4"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Solution Path" />
                    <noggog:PathPicker Name="SolutionPathPicker" Grid.Row="1" />
                    <TextBlock Grid.Row="2"
                        Margin="0,8,0,4"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Project Name" />
                    <TextBox Grid.Row="3"
                        x:Name="ExistingProjectNameBox"
                        noggog:ControlsHelper.ErrorTooltip="{Binding Existing.ProjectError.Reason}"
                        noggog:ControlsHelper.InError="{Binding Existing.ProjectError.Succeeded, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource Noggog.Styles.TextBox.ErrorState}" />
                </Grid>
            </TabItem>
            <TabItem Background="Transparent" Header="Existing Project">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                        Margin="0,4"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Solution Path" />
                    <noggog:PathPicker Name="BothExistingSolutionPathPicker" Grid.Row="1" />
                    <TextBlock Grid.Row="2"
                        Margin="0,8,0,4"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Project Path" />
                    <noggog:PathPicker Name="BothExistingProjectPathPicker" Grid.Row="3" />
                </Grid>
            </TabItem>
        </TabControl>
        <CheckBox Grid.Row="1"
            x:Name="OpenVsAfter"
            Margin="10,15,0,6"
            Content="Open Visual Studio After Creating" />
        <Grid Grid.Row="2"
            x:Name="HelpBox"
            Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                x:Name="HelpButton"
                Margin="0,8,0,0"
                VerticalAlignment="Top">
                <icon:PackIconMaterial Kind="HelpCircle" />
            </Button>
            <TextBlock Grid.Column="1"
                x:Name="HelpText"
                Margin="15,0,0,0"
                TextWrapping="Wrap"
                Visibility="Collapsed">
                Add a C# Mutagen Project as a patcher.<LineBreak />
                Synthesis will build and use its results as a patch.<LineBreak />
                <LineBreak />
                A solution is a collection of projects.  Synthesis can make a whole fresh setup for you to get you bootstrapped,
                or you can add a project to an already existing setup.<LineBreak />
                <LineBreak />
                Alternatively, you can set up a CLI patcher to the results of your build.</TextBlock>
        </Grid>
    </Grid>
</local:SolutionInitViewBase>
