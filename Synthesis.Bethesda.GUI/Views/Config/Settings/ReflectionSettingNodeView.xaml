<local:ReflectionSettingNodeViewBase
    x:Class="Synthesis.Bethesda.GUI.Views.ReflectionSettingNodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ListBox
        x:Name="Nodes"
        Background="Transparent"
        ItemContainerStyle="{StaticResource Noggog.Styles.ListBoxItem.Plain}"
        ScrollViewer.CanContentScroll="False"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <local:SettingsNodeView x:Name="TopNodeView" Margin="0,3,4,3" />
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</local:ReflectionSettingNodeViewBase>
