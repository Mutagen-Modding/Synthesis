<wpf:NoggogUserControl
    x:TypeArguments="environmentErrors:PluginsTxtMissingVm" x:Class="Synthesis.Bethesda.GUI.Views.MissingPluginsFileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Noggog.WPF;assembly=Noggog.WPF"
    xmlns:environmentErrors="clr-namespace:Synthesis.Bethesda.GUI.ViewModels.EnvironmentErrors"
    d:DesignHeight="300"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
            Margin="20,10"
            FontSize="35"
            Foreground="{StaticResource SalmonBrush}"
            Text="Missing Plugins.txt Load Order File" />
        <TextBox Grid.Row="1"
            x:Name="PluginPathBlock"
            Margin="20,0"
            IsReadOnly="True" />
        <TextBlock Grid.Row="2"
            x:Name="CustomTextBlock"
            Margin="30,15,30,0"
            FontSize="14" />
    </Grid>
</wpf:NoggogUserControl>
