<local:NoDotNetSdkInstalledViewBase
    x:Class="Synthesis.Bethesda.GUI.Views.NoDotNetSdkInstalledView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Synthesis.Bethesda.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
            Margin="20,10"
            FontSize="35"
            Foreground="{StaticResource SalmonBrush}"
            Text="Install DotNet SDK" />
        <TextBlock Grid.Row="1"
            x:Name="CustomTextBlock"
            Margin="20,0" />
        <Button Grid.Row="2"
            x:Name="DownloadButton"
            Margin="20,20"
            HorizontalAlignment="Left"
            FontSize="24">
            Download
        </Button>
        <TextBlock Grid.Row="4"
            Margin="20,20"
            Text="If you have already installed the SDK, try restarting Synthesis and/or your computer." />
    </Grid>
</local:NoDotNetSdkInstalledViewBase>
